---
/**
 * About Section: "The Artist's Touch"
 * Personal introduction with parallax effect
 */
import aboutContent from '../content/about.json';

// Icon mapping
const iconMap: Record<string, string> = {
  shield: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>`,
  clock: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>`,
  heart: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>`,
  star: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>`,
  check: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>`,
};
---

<section class="about" id="about">
  <div class="about-bg-flowers" aria-hidden="true"></div>
  
  <div class="about-container">
    <div class="about-image-wrapper">
      <div class="about-image parallax-element">
        {aboutContent.aboutImage ? (
          <img src={aboutContent.aboutImage} alt="By Tessa Makeup About" class="about-portrait" />
        ) : (
          <div class="about-image-placeholder">
            <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="20" y="30" width="60" height="40" rx="5" fill="#D4A5A5"/>
              <circle cx="70" cy="45" r="8" fill="#E8C4C4"/>
              <path d="M25 55 L40 45 L55 55 L65 48 L75 55" stroke="#B88A8A" stroke-width="2" fill="none"/>
            </svg>
            <span>Foto Close-up<br>Aplikasi Makeup</span>
          </div>
        )}
      </div>
      
      <!-- Decorative elements -->
      <div class="about-decor about-decor-1"></div>
      <div class="about-decor about-decor-2"></div>
    </div>

    <div class="about-content">
      <span class="about-label">{aboutContent.label}</span>
      <h2 class="about-title">
        {aboutContent.title}<br>
        <span class="accent-text">{aboutContent.titleAccent}</span>
      </h2>
      
      <div class="floral-divider"></div>
      
      <p class="about-text" set:html={aboutContent.description1}></p>
      <p class="about-text" set:html={aboutContent.description2}></p>

      <div class="about-features">
        {aboutContent.features.map((feature) => (
          <div class="about-feature">
            <div class="feature-icon" set:html={iconMap[feature.icon] || iconMap.shield}></div>
            <div class="feature-text">
              <h4>{feature.title}</h4>
              <p>{feature.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    position: relative;
    padding: 8rem 2rem;
    overflow: hidden;
    background: var(--white);
  }

  /* Background flower pattern */
  .about-bg-flowers {
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23d4a5a5' fill-opacity='0.05'%3E%3Cpath d='M30 30c0-5.523 4.477-10 10-10s10 4.477 10 10-4.477 10-10 10-10-4.477-10-10zm-20 0c0-5.523 4.477-10 10-10s10 4.477 10 10-4.477 10-10 10-10-4.477-10-10z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.5;
    pointer-events: none;
  }

  .about-container {
    max-width: var(--container-max);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 5rem;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  /* Image section */
  .about-image-wrapper {
    position: relative;
  }

  .about-image {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: var(--shadow-hover);
  }

  .about-portrait {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .about-image-placeholder {
    aspect-ratio: 4/5;
    background: linear-gradient(135deg, var(--dusty-rose-light), var(--cream-dark));
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--deep-maroon);
    font-family: var(--font-display);
    font-size: 0.9rem;
    text-align: center;
    padding: 2rem;
  }

  .about-image-placeholder svg {
    width: 60px;
    height: 60px;
    margin-bottom: 1rem;
    opacity: 0.5;
  }

  /* Decorative elements */
  .about-decor {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
  }

  .about-decor-1 {
    width: 150px;
    height: 150px;
    background: linear-gradient(135deg, var(--antique-gold), var(--antique-gold-light));
    opacity: 0.15;
    top: -30px;
    right: -30px;
    z-index: -1;
  }

  .about-decor-2 {
    width: 100px;
    height: 100px;
    background: var(--dusty-rose);
    opacity: 0.2;
    bottom: -20px;
    left: -20px;
    z-index: -1;
  }

  /* Content section */
  .about-content {
    padding-left: 2rem;
  }

  .about-label {
    display: inline-block;
    font-family: var(--font-display);
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--dusty-rose);
    margin-bottom: 1rem;
  }

  .about-title {
    font-size: clamp(2rem, 4vw, 3rem);
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .about-title .accent-text {
    display: block;
    font-size: 0.7em;
    margin-top: 0.25rem;
  }

  .about-text {
    font-size: 1.05rem;
    line-height: 1.9;
    color: var(--warm-grey);
    margin-bottom: 1rem;
  }

  .about-text :global(strong) {
    color: var(--deep-maroon);
  }

  /* Features */
  .about-features {
    margin-top: 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .about-feature {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .feature-icon {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, var(--dusty-rose-light), var(--dusty-rose));
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
  }

  .feature-icon :global(svg) {
    width: 24px;
    height: 24px;
  }

  .feature-text h4 {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 700;
    color: var(--deep-maroon);
    margin-bottom: 0.25rem;
  }

  .feature-text p {
    font-size: 0.9rem;
    color: var(--warm-grey);
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .about-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .about-image-wrapper {
      max-width: 400px;
      margin: 0 auto;
    }

    .about-content {
      padding-left: 0;
      text-align: center;
    }

    .about-features {
      align-items: center;
    }

    .about-feature {
      max-width: 300px;
    }
  }

  @media (max-width: 480px) {
    .about {
      padding: 5rem 1rem;
    }

    .about-feature {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }
  }
</style>

<script>
  // Simple parallax effect
  const parallaxElement = document.querySelector('.parallax-element');
  
  if (parallaxElement) {
    window.addEventListener('scroll', () => {
      const scrolled = window.scrollY;
      const rate = scrolled * 0.1;
      (parallaxElement as HTMLElement).style.transform = `translateY(${rate}px)`;
    });
  }
</script>
